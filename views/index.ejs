  inputCallbackFn: function(o) {
          console.log("works#")
    // add error conversation block & recall it if no answer matched
    var miss = function() {
            console.log("works&")
      chatWindow.talk(
        {
          "i-dont-get-it": {
            says: [
              "Sorry, I don't get it ðŸ˜•. Pls repeat? Or you can just click below ðŸ‘‡"
            ],
